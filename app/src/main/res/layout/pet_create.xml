<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/windows_pet"
    tools:context=".Login">

    <Button
        android:id="@+id/button13"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_background"
        android:onClick="GoToPetSelect"
        android:text="Вернуться"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button12"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_background"
        android:onClick="Create"
        android:text="Создать"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20px"
            android:text="Создать"
            android:textAlignment="center"
            android:textColor="#020202"
            android:textSize="38sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20px"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20px"
            android:background="@drawable/input_background"
            android:hint="Имя"
            android:paddingStart="20dp"></EditText>

        <EditText
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20px"


            android:layout_marginStart="20dp"
            android:layout_marginEnd="20px"
            android:background="@drawable/input_background"
            android:hint="ID"
            android:paddingStart="20dp"></EditText>

        <EditText
            android:id="@+id/photo_url"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20px"


            android:layout_marginStart="20dp"
            android:layout_marginEnd="20px"
            android:background="@drawable/input_background"
            android:hint="URL фото"
            android:paddingStart="20dp"></EditText>

        <EditText
            android:id="@+id/category_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20px"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20px"
            android:background="@drawable/input_background"
            android:hint="ID категории"
            android:paddingStart="20dp"></EditText>

        <EditText
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20px"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20px"
            android:background="@drawable/input_background"
            android:hint="Категория"
            android:paddingStart="20dp"></EditText>

        <EditText
            android:id="@+id/tags_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20px"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20px"
            android:layout_marginBottom="9dp"
            android:background="@drawable/input_background"
            android:hint="ID тэга"
            android:paddingStart="20dp"></EditText>

        <EditText
            android:id="@+id/tags_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20px"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20px"
            android:background="@drawable/input_background"
            android:hint="Тэг"
            android:paddingStart="20dp"></EditText>

        <EditText
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="20px"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20px"
            android:background="@drawable/input_background"
            android:hint="Статус"
            android:paddingStart="20dp"></EditText>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>